            <div class="col-lg-12 mb-6">
              <!-- Project Card Example -->
              <div class="card shadow mb-6">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Ongoing Contracts</h6>
                </div>
                
              <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Reference</th>
                   <!-- <th>Description</th>-->
                    <th>Duration</th>
                    <th>Description</th>
                    <th>Inventory value</th>
                    <% if current_user.roles.include? :landlord %>
                      <th>Registration</th>
                      <th colspan="3"><%= link_to fa_icon("plus", text: "Create"), new_contract_path %></th>
                    <% end %>   
                  </tr>
                  </thead>
                  <tbody>
                    <% @contracts.each do |contract| %>
                      <tr>
                        <td><%= contract.reference %></td>
                        <td><%= contract.duration %></td>
                        <td><%= contract.description %></td>
                        <td><%= contract.asset %>â‚¬</td>
                        <% if current_user.roles.include? :landlord %>
                        <td><%#= link_to fa_icon("id-badge", text: "Details"), registration_path %>
    <%= link_to fa_icon("download", text: "Download"),contracts_download_path(contract, format: 'html')  %>
                          <%#= contract.user.name %></td>
                        <td><%= link_to fa_icon("id-badge", text: "Details"), contract %></td>
                        <td><%= link_to fa_icon('pencil-square-o', text: "Edit"), edit_contract_path(contract) %></td>
                        <td><%= link_to fa_icon('trash', text: "Delete"), contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        <% else %>
                        <td><%= link_to fa_icon{'file-text'}, contract %></td>
                        <% end %>

                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>