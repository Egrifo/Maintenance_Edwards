<div class="container-fluid">
      <button type="button" id="sidebarCollapse" class="btn btn-info"><i class="fa fa-align-left"></i><span></span></button>

<div class="container">
   <div class="card shadow mb-4">
    <div class="card-img-left d-none d-md-flex"></div>
    <div class="card-header py-3">

<%- model_class = Maintenance -%>
    <div class="page-header">
      <h1>Maintenance Schedule<%#=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%#= model_class.human_attribute_name(:id) %></th>
                <th><%= model_class.human_attribute_name(:name) %></th>
                <th><%#= model_class.human_attribute_name(:starting_date) %></th>
                <th><%= model_class.human_attribute_name(:description) %></th>
                <th><%#= model_class.human_attribute_name(:created_at) %></th>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @maintenances.each do |maintenance| %>
                <tr>
                  <td><%#= link_to maintenance.id, maintenance_path(maintenance) %></td>
                  <td><%= maintenance.name %></td>
                  <td><%#= maintenance.starting_date %></td>
                  <td><%= maintenance.description %></td>
                  <td><%#S=l maintenance.created_at %></td>
                  <td>
                    <%= link_to t('.show', :default => t("helpers.links.show")),
                                maintenance_path(maintenance), :class => 'btn btn-default btn-xs' %>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_maintenance_path(maintenance), :class => 'btn btn-default btn-xs' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                maintenance_path(maintenance),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_maintenance_path,
            :class => 'btn btn-primary' %>
</div>
</div>
</div>
</div>