<div class="container-fluid">
      <button type="button" id="sidebarCollapse" class="btn btn-info"><i class="fa fa-align-left"></i><span></span></button>
<div class="container">
   <div class="card shadow mb-4">
    <div class="card-img-left d-none d-md-flex"></div>
      <div class="card-header py-3">
      <%- model_class = Task -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
      </div>
<dl class="dl-horizontal">
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Minutes:</strong>
  <%= @task.minutes %>
</p>

<p>
  <strong>Tool:</strong>
  <%= @task.tool_id %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>
<p>
  <strong>Every:</strong>
  <%= @task.schedule %>
</p>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn btn-default'  %>|
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-default' %>|
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
      </div>
    </div>
</div>

</div>